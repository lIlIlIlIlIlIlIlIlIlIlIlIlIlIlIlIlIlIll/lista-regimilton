def verificar_temperatura():

    try:
        temperatura = float(input("Digite a temperatura atual (em Celsius): "))
    except ValueError:
        print("Entrada invÃ¡lida. Por favor, digite um nÃºmero.")
        return

    if temperatura > 25:
        print("Alerta: Temperatura alta!")
    elif temperatura < 10:
        print("Alerta: Temperatura baixa!")
    else:
        print("Temperatura normal.")

verificar_temperatura()
